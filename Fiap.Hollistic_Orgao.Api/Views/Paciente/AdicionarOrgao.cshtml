@model IndexPacienteViewModel

@{
    ViewData["Title"] = "Adicionar";
}

<h1> @Model.Paciente.Nome </h1>



<hr />

<h3>Orgãos</h3>
<table class="table">
    <tr>
        <th>Tipo</th>
        <th>Condição</th>
        <th>Isquemia</th>
    </tr>
    @foreach (var item in ViewBag.lista)
    {
        <tr>
            <td>@item.TipoOrgao</td>
            <td>@item.Condicao</td>
            <td>@item.Isquemia</td>

        </tr>
    }
</table>

<hr />

<h2>Cadastro de Orgao</h2>

<mensagem mensagem="@TempData["msg"]"></mensagem>


<form asp-action="adicionarOrgao">
    <input asp-for="Orgao.PacienteId" value="@Model.PacienteId" hidden />
    <div class="form-group">
        <label asp-for="Orgao.TipoOrgao"></label>
        <select asp-for="Orgao.TipoOrgao" class="form-control" asp-items="@Html.GetEnumSelectList<Fiap.Hollistic.Web.Model.TipoOrgao>()">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Orgao.Condicao"></label>
        <textarea asp-for="Orgao.Condicao" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Orgao.Isquemia"></label>
        <input asp-for="Orgao.Isquemia" class="form-control" />
    </div>

    <input class="btn btn-primary" type="submit" value="Cadastrar" />
</form>
