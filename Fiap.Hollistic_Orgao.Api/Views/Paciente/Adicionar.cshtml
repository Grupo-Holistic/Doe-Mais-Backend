@model IndexPacienteViewModel

@{
    ViewData["Title"] = "Adicionar";
}

<h1> @Model.Paciente.Nome </h1>


<hr />

<h3>Exames</h3>
<table class="table">
    <tr>
        <th>Tipo</th>
        <th>Descrição</th>
        <th>Data do Exame</th>
    </tr>
    @foreach (var item in ViewBag.lista)
    {
        <tr>
            <td>@item.Tipo</td>
            <td>@item.Descricao</td>
            <td>@item.DataExame.ToShortDateString()</td>

        </tr>
    }
</table>

<hr />

<h2>Cadastro de Exame</h2>

<mensagem mensagem="@TempData["msg"]"></mensagem>


<form asp-action="adicionar">
    <input asp-for="Exame.PacienteId" value="@Model.PacienteId" hidden />
    <div class="form-group">
        <label asp-for="Exame.Tipo"></label>
        <input asp-for="Exame.Tipo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Exame.Descricao"></label>
        <textarea asp-for="Exame.Descricao" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Exame.DataExame"></label>
        <input asp-for="Exame.DataExame" class="form-control" />
    </div>

    <input class="btn btn-primary" type="submit" value="Cadastrar" />
</form>

