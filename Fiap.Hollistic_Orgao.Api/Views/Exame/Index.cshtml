@model Fiap.Hollistic.Web.Model.Exame

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Exames</h1>

<table class="table">
    <tr>
        <th>Tipo</th>
        <th>Descrição</th>
        <th>Data do Exame</th>
    </tr>
    @foreach (var item in ViewBag.exames)
    {
        <tr>
            <td>@item.Tipo</td>
            <td>@item.Descricao</td>
            <td>@item.DataExame.ToShortDateString()</td>
        </tr>
    }
</table>

<h2>Cadastro de Exame</h2>

<mensagem mensagem="@TempData["msg"]"></mensagem>

<form asp-action="cadastrar">
    <input asp-for="PacienteId"/>
    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="DataExame"></label>
        <input asp-for="DataExame" class="form-control" />
    </div>

    <input class="btn btn-primary" type="submit" value="Cadastrar" />
</form>